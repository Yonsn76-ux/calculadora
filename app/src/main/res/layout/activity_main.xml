<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_oscuro"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="404dp"
        android:layout_height="71dp"
        android:layout_marginTop="108dp"
        android:fontFamily="fantasy"
        android:text="CALCULADORA"
        android:textAlignment="center"
        android:textColor="#C71313"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/most_resultado"
        android:layout_width="359dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:background="#f5ffd2"
        android:gravity="end|center_vertical"
        android:padding="8dp"
        android:textSize="36sp"
        android:textStyle="bold|italic"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:strokeColor="@color/verde"
        app:strokeWidth="23dp" />

    <FrameLayout
        android:layout_width="405dp"
        android:layout_height="305dp"
        android:layout_marginTop="437dp"
        android:layout_marginBottom="16dp"
        android:background="#FFC107"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp">

        <GridLayout
            android:layout_width="399dp"

            android:layout_height="344dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#f5ffd2"
            android:columnCount="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/most_resultado"
            app:layout_constraintVertical_bias="0.529">

            <Button
                android:id="@+id/n7"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="7"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp"

                />


            <Button
                android:id="@+id/n8"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="8"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/n9"
                android:layout_height="70dp"
                android:layout_row="0"
                android:layout_column="2"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="9"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/div"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/cian"
                android:fontFamily="sans-serif-black"
                android:text="/"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/teal"
                app:strokeColor="@color/black"
                app:strokeWidth="2sp" />


            <Button
                android:id="@+id/n4"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="4"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/n5"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="5"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/n6"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="6"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/mult"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/cian"
                android:fontFamily="sans-serif-black"
                android:text="*"
                android:textColor="@color/black"
                android:textColorLink="#D6CFCA"
                app:cornerRadius="4dp"
                app:rippleColor="@color/teal"
                app:strokeColor="@color/black"
                app:strokeWidth="2sp" />/>

            <Button
                android:id="@+id/n1"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="1"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/n2"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="2"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/n3"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="3"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/rest"
                android:layout_width="102dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/cian"
                android:fontFamily="sans-serif-black"
                android:text="-"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/teal"
                app:strokeColor="@color/black"
                app:strokeWidth="2sp" />


            <Button
                android:id="@+id/n0"
                android:layout_height="70dp"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif-black"
                android:text="0"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp" />

            <Button
                android:id="@+id/DEL"
                android:layout_height="70dp"
                android:backgroundTint="@color/rojo"
                android:text="DEL"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/rosa" />

            <Button
                android:id="@+id/igu"
                android:layout_height="70dp"
                android:width="22dp"
                android:backgroundTint="@color/white"
                android:color="@color/verde"
                android:fontFamily="sans-serif-black"
                android:text="="
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/gris"
                app:strokeColor="@color/verde"
                app:strokeWidth="2sp"


                />


            <Button
                android:id="@+id/sum"
                android:layout_width="101dp"
                android:layout_height="70dp"
                android:backgroundTint="@color/cian"
                android:fontFamily="sans-serif-black"
                android:text="+"
                android:textColor="@color/black"
                app:cornerRadius="4dp"
                app:rippleColor="@color/teal"
                app:strokeColor="@color/black"
                app:strokeWidth="2sp" />


        </GridLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
